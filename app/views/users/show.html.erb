<p>
  <strong><%= User.human_attribute_name("username") %>:</strong>
  <%= @user.username %>
</p>

<p>
  <% if @user.icon.attached? %>
    <strong><%= User.human_attribute_name("icon") %>:</strong>
    <%= image_tag @user.icon.variant(resize_to_limit: [100, 100]) %>
  <% end %>
</p>

<p>
  <strong><%= User.human_attribute_name("email") %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name("zipcode") %>:</strong>
  <%= @user.zipcode %>
</p>

<p>
  <strong><%= User.human_attribute_name("address") %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= User.human_attribute_name("profile") %>:</strong>
  <%= @user.profile %>
</p>

<%= link_to t("button.edit"), edit_user_path(current_user) %> |
<%= link_to t("button.back"), users_path %>
